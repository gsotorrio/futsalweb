
@{
    ViewBag.Title = "Players";
}

@section scripts{
    <script src="~/Scripts/App/playersWizard.js"></script>
}

<h2>Mange your players.</h2>
<hr />

<form class="form-horizontal">
    <input type="hidden" data-bind="textInput: player.id">

    <div class="form-group">
        <label for="" class="col-sm-2 control-label">Name</label>
        <div class="col-sm-8">
            <input type="text" class="form-control" placeholder="Name" data-bind="textInput: player.name">
        </div>
    </div>
    <div class="form-group">
        <label for="" class="col-sm-2 control-label">Surname</label>
        <div class="col-sm-8">
            <input type="text" class="form-control" placeholder="Surname" data-bind="textInput: player.surname">
        </div>
    </div>
    <div class="form-group">
        <label for="" class="col-sm-2 control-label">Birthdate</label>
        <div class="col-sm-8">
            <input type="date" class="form-control" placeholder="Birthdate" data-bind="textInput: player.birthdate">
        </div>
    </div>
    <div class="form-group">
        <label for="" class="col-sm-2 control-label">Height</label>
        <div class="col-sm-8">
            <input type="number" class="form-control" placeholder="Height" data-bind="textInput: player.height">
        </div>
    </div>
    <div class="form-group">
        <label for="" class="col-sm-2 control-label">Weight</label>
        <div class="col-sm-8">
            <input type="number" class="form-control" placeholder="Weight" data-bind="textInput: player.weight">
        </div>
    </div>
    <div class="form-group">
        <label for="" class="col-sm-2 control-label">Strong-Leg</label>
        <div class="col-sm-8">
            <div data-bind="visible: legOption">
                <div><input type="checkbox" value="Left" data-bind="checked: whatLeg" /> Left</div>
                <div><input type="checkbox" value="Right" data-bind="checked: whatLeg" /> Right</div>

            </div>
        </div>
    </div>
    <div class="form-group">
        <label for="" class="col-sm-2 control-label">Status</label>
        <div class="col-sm-8">
            <input type="text" class="form-control" placeholder="Status" data-bind="textInput: player.status">
        </div>
    </div>
</form>

<br />

<input data-bind="click: createPlayer" type="button" value="Save" class="col-md-offset-3 col-md-2 btn btn-primary">
<input data-bind="click: cleanFormPlayer" type="button" value="Cancel" class="col-md-offset-2 col-md-2 btn btn-primary">

<br />
<br />
<br />

<table id="tablePlayers" class="table table-striped">
    <thead>
        <tr>
            <th class="hideId">Player Id</th>
            <th>Name</th>
            <th>Surname</th>
            <th>Birthdate</th>
            <th>Height</th>
            <th>Weight</th>
            <th>Strong-Leg</th>
            <th>Status</th>
            <th></th>
            <th></th>
        </tr>
    </thead>

    <tbody data-bind="foreach: players">
        <tr>
            <td class="hideId" data-bind="text: id"></td>
            <td data-bind="text: name"></td>
            <td data-bind="text: surname"></td>
            <td data-bind="text: birthdate"></td>
            <td data-bind="text: height"></td>
            <td data-bind="text: weight"></td>
            <td data-bind="text: strongLeg"></td>
            <td data-bind="text: status"></td>
            <td data-bind="click: $root.putDataInForm"><a href="#">Edit</a></td>
            <td data-bind="click: $root.removePlayer"><a href="#">Delete</a></td>
        </tr>
    </tbody>
</table>

<br />
<br />
<br />

<input data-bind="click: " type="button" value="Back" class="col-md-offset-1 col-md-2 btn btn-primary">
<input data-bind="click: goCoacheswizard" type="button" value="Next" class="col-md-offset-6 col-md-2 btn btn-primary">


