
@{
    ViewBag.Title = "Coaches";
}

@section scripts{
    <script src="~/Scripts/App/coachesWizard.js"></script>
}

<h2>Manage your couching staff</h2>
<hr />

<form class="form-horizontal">
    <input type="hidden" data-bind="textInput: coach.id">

    <div class="form-group">
        <label for="" class="col-sm-2 control-label">Name</label>
        <div class="col-sm-8">
            <input type="text" class="form-control" placeholder="Name" data-bind="textInput: coach.name">
        </div>
    </div>
    <div class="form-group">
        <label for="" class="col-sm-2 control-label">Surname</label>
        <div class="col-sm-8">
            <input type="text" class="form-control" placeholder="Surname" data-bind="textInput: coach.surname">
        </div>
    </div>
    <div class="form-group">
        <label for="" class="col-sm-2 control-label">Birthdate</label>
        <div class="col-sm-8">
            <input type="date" class="form-control" placeholder="Birthdate" data-bind="textInput: coach.birthdate">
        </div>
    </div>
    <div class="form-group">
        <label for="" class="col-sm-2 control-label">Role</label>
        <div class="col-sm-8">
            <input type="text" class="form-control" placeholder="Role" data-bind="textInput: coach.role">
        </div>
    </div>
</form>
<br />

<input data-bind="click: createCoach" type="button" value="Save" class="col-md-offset-3 col-md-2 btn btn-primary">
<input data-bind="click: cleanFormCoach" type="button" value="Cancel" class="col-md-offset-2 col-md-2 btn btn-primary">

<br />
<br />
<br />

<table id="tableCoaches" class="table table-striped" data-bind="visible: hiddeTableButtonCoach().length > 0">
    <thead>
        <tr>
            <th class="hideId">Coach Id</th>
            <th>Name</th>
            <th>Surname</th>
            <th>Birthdate</th>
            <th>Role</th>
            <th></th>
            <th></th>
        </tr>
    </thead>

    <tbody data-bind="foreach: coaches">
        <tr>
            <td class="hideId" data-bind="text: id"></td>
            <td data-bind="text: name"></td>
            <td data-bind="text: surname"></td>
            <td data-bind="text: birthdate"></td>
            <td data-bind="text: role"></td>
            <td data-bind="click: $root.putDataCoachInForm"><a href="#">Edit</a></td>
            <td data-bind="click: $root.removeCoach"><a href="#">Delete</a></td>
        </tr>
    </tbody>
</table>

<br />
<br />
<br />

<input data-bind="click: " type="button" value="Back" class="col-md-offset-1 col-md-2 btn btn-primary">
<input data-bind="click: goTeamList , visible: hiddeTableButtonCoach().length > 0" type="button" value="Finish" class="col-md-offset-6 col-md-2 btn btn-primary">

