
@{
    ViewBag.Title = "List Teams";
}

<h2>Teams datas</h2>

<form class="form-horizontal">
    <div class="form-group">
        <label for="" class="col-sm-2 control-label">Name</label>
        <div class="col-sm-8">
            <input type="text" class="form-control" data-bind="textInput: team.name" placeholder="Name">
        </div>
    </div>
    <div class="form-group">
        <label for="" class="col-sm-2 control-label">Category</label>
        <div class="col-sm-8">
            <input type="text" class="form-control" data-bind="textInput: team.category" placeholder="Category">
        </div>
    </div>

    <br/>

    <input data-bind="click: createTeam" type="button" value="Save" class="button col-md-2 col-md-offset-2">
    <input data-bind="click: clean" type="button" value="Cancel" class="button col-md-2 col-md-offset-1">
    <input data-bind="click: updateTeam" type="button" value="Update" class="button col-md-2 col-md-offset-1">
</form>

<br/>

<hr/>

<h2>Table Teams</h2>

<table id="tableTeams" class="table table-striped">
    <thead>
        <tr>
            <th class="hideId">Team Id</th>
            <th>Team Name</th>
            <th>Category</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>

    <tbody data-bind="foreach: teams">
        <tr>
            <td class="hideId" data-bind="text: teamId"></td>
            <td data-bind="text: name"></td>
            <td data-bind="text: category"></td>
            <td data-bind="click: $root."><a href="#">Edit</a></td>
            <td data-bind="click: $root.select"><a href="#">Select</a></td>
            <td data-bind="click: $root.remove"><a href="#">Delete</a></td>
        </tr>  
    </tbody>
</table>