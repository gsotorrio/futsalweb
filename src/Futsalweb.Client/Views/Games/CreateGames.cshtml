@{
    ViewBag.Title = "CreateGames";
}

@section scripts{
<script src="~/Scripts/App/gamesDataWizard.js"></script>
}

<h2>Game Data</h2>
<hr />

<form class="form-horizontal">
    <input type="hidden" data-bind="textInput: gameData.idGame">
    <div class="form-group">
        <label for="" class="col-sm-2 control-label">Home Team</label>
        <div class="col-sm-4" data-bind="if: displayMassage">
            <select type="text" class="form-control" data-bind="options: teams, value: selectTeam"></select>
        </div>

        <div class="col-sm-4">
            <input type="text" class="form-control" placeholder="Write team name" data-bind="visible: hiddeTextBox().length > 0">
        </div>
    </div>
    <div class="form-group">
        <label for="" class="col-sm-2 control-label">Guest Team</label>
        <div class="col-sm-8">
            <input type="text" class="form-control" placeholder="Visit Team" data-bind="textInput: gameData.rivalTeam">
        </div>
    </div>
    <div class="form-group">
        <label for="" class="col-sm-2 control-label">Date</label>
        <div class="col-sm-8">
            <input type="date" class="form-control" placeholder="Date" data-bind="textInput: gameData.dateGame">
        </div>
    </div>
    <div class="form-group">
        <label for="" class="col-sm-2 control-label">Time</label>
        <div class="col-sm-8">
            <input type="time" class="form-control" placeholder="Time" data-bind="textInput: gameData.timeGame">
        </div>
    </div>
    <div class="form-group">
        <label for="" class="col-sm-2 control-label">Place</label>
        <div class="col-sm-8">
            <input type="text" class="form-control" placeholder="Place" data-bind="textInput: gameData.placeGame">
        </div>
    </div>
    <div class="form-group">
        <label for="" class="col-sm-2 control-label">Type</label>
        <div class="col-sm-8">
            <input type="text" class="form-control" placeholder="Type" data-bind="textInput: gameData.typeGame">
        </div>
    </div>
</form>

<input data-bind="click: createUpdateGame" type="button" value="Next" class="col-md-offset-8 col-md-2 btn btn-primary">