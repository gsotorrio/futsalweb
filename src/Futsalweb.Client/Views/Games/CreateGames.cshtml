@{
    ViewBag.Title = "CreateGames";
}

@section scripts{
    <script src="~/Scripts/App/.js"></script>
}

<h2>Game Data</h2>
<hr />

<form class="form-horizontal">
    <input type="hidden" data-bind="textInput: ">
    <div class="form-group">
        <label for="" class="col-sm-2 control-label">Home Team</label>
        <div class="col-sm-8">
            <input type="text" class="form-control" placeholder="Home Team" data-bind="textInput: ">
        </div>
    </div>
    <div class="form-group">
        <label for="" class="col-sm-2 control-label">Visit Team</label>
        <div class="col-sm-8">
            <input type="text" class="form-control" placeholder="Visit Team" data-bind="textInput: ">
        </div>
    </div>
    <div class="form-group">
        <label for="" class="col-sm-2 control-label">Date</label>
        <div class="col-sm-8">
            <input type="date" class="form-control" placeholder="Date" data-bind="textInput: ">
        </div>
    </div>
    <div class="form-group">
        <label for="" class="col-sm-2 control-label">Time</label>
        <div class="col-sm-8">
            <input type="number" class="form-control" placeholder="Time" data-bind="textInput: ">
        </div>
    </div>
    <div class="form-group">
        <label for="" class="col-sm-2 control-label">Place</label>
        <div class="col-sm-8">
            <input type="text" class="form-control" placeholder="Place" data-bind="textInput: ">
        </div>
    </div>
    <div class="form-group">
        <label for="" class="col-sm-2 control-label">Type</label>
        <div class="col-sm-8">
            <input type="text" class="form-control" placeholder="Type" data-bind="textInput: ">
        </div>
    </div>
</form>

<input data-bind="click: " type="button" value="Next" class="col-md-offset-8 col-md-2 btn btn-primary">