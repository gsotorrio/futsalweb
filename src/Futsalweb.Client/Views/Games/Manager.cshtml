@{
    ViewBag.Title = "CreateGames";
}

@section scripts{
<script src="~/Scripts/App/gamesDataWizard.js"></script>
}

<h2>Game Data</h2>
<hr />

<form class="form-horizontal">
    <input type="hidden" data-bind="textInput: gameData.idGame">
    <div class="form-group">
        <label for="" class="col-sm-2 control-label">My Team</label>
        <div class="col-sm-8">
            <select class="form-control" data-bind="options: myTeams, selectedOptions: selectMyTeam"></select>
        </div>
    </div>

    <div class="form-group">
        <label for="" class="col-sm-2 control-label">Rival Team</label>
        <div class="col-sm-8">
            <input type="text" class="form-control" placeholder="Write team name" data-bind="textInput: gameData.rivalTeam">
        </div>
    </div>

    <div class="form-group">
        <div>
            <label for="" class="col-sm-2 control-label">Played at home?</label>
            <input class="col-sm-8" type="checkbox" value="" data-bind="checked: wherePlayed" />
        </div>
    </div>

    <div class="form-group">
        <label for="" class="col-sm-2 control-label">Date</label>
        <div class="col-sm-8">
            <input type="date" class="form-control" placeholder="Date" data-bind="textInput: gameData.dateGame">
        </div>
    </div>

    <div class="form-group">
        <label for="" class="col-sm-2 control-label">Time</label>
        <div class="col-sm-8">
            <input type="time" class="form-control" placeholder="Time" data-bind="textInput: gameData.timeGame">
        </div>
    </div>

    <div class="form-group">
        <label for="" class="col-sm-2 control-label">Location </label>
        <div class="col-sm-8">
            <input type="text" class="form-control" placeholder="Place" data-bind="textInput: gameData.locationGame">
        </div>
    </div>

    <div class="form-group">
        <label for="" class="col-sm-2 control-label">Type</label>
        <div class="col-sm-8">
            <input type="text" class="form-control" placeholder="Type" data-bind="textInput: gameData.typeGame">
        </div>
    </div>
</form>

<input data-bind="click: createUpdateGame" type="button" value="Next" class="col-md-offset-8 col-md-2 btn btn-primary">