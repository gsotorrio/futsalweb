
@{
    ViewBag.Title = "ListGames";
}

@section scripts{
    <script src="~/Scripts/App/listGames.js"></script>
}

<h2>Your Games</h2>
<hr />

<table id="tableTeams" class="table table-striped">
    <thead>
        <tr>
            <th class="hideId">Game Id</th>
            <th>Home Team</th>
            <th>Visit Team</th>
            <th>Type</th>
            <th>Date</th>
            <th></th>
            <th></th>
        </tr>
    </thead>

    <tbody data-bind="foreach: games">
        <tr>
            <td class="hideId" data-bind="text: idGame"></td>
            <td data-bind="text: homeTeam"></td>
            <td data-bind="text: visitTeam"></td>
            <td data-bind="text: typeGame"></td>
            <td data-bind="text: dateGame"></td>
            <td data-bind="click: $root.goDetails"><a href="#">Datail</a></td>
            <td data-bind="click: $root.remove"><a href="#">Delete</a></td>
        </tr>
    </tbody>
</table>

<input type="button" value="New Game" class="col-md-offset-9 col-md-2 btn btn-primary" onclick="">
